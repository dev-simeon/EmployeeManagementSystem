@page
@model EmployeeManagementSystem.Pages.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmployeeManagementSystem.styles.css" asp-append-version="true" />
</head>

<body class="vh-100">
    <main class="d-flex h-100">
        <section class="d-flex align-items-center align-items-md-start col-12 col-md-5 col-lg-4 bg-light
            flex-column gap-3 py-4 px-4">
            <a class="navbar-brand fs-4 text-dark text-decoration-none" asp-area="" asp-page="/Index">Employee Management</a>

            <form method="post" class="d-flex col-11 col-sm-6 col-md-12 flex-column gap-3">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div>
                    <label class="form-label mb-1" asp-for="OrganisationName">Organisation Name</label>
                    <input class="form-control" type="text" asp-for="OrganisationName" required />
                </div>
                
                <div>
                    <label class="form-label mb-1" asp-for="Email">Admin Email</label>
                    <input class="form-control" type="email" asp-for="Email" required />
                </div>

                <div class="d-flex gap-3">
                    <div>
                        <label class="form-label mb-1" asp-for="FirstName">First Name</label>
                        <input class="form-control" type="text" asp-for="FirstName" required />
                    </div>

                    <div>
                        <label class="form-label mb-1" asp-for="LastName">Last Name</label>
                        <input class="form-control" type="text" asp-for="LastName" required />
                    </div>
                </div>

                <div>
                    <label class="form-label mb-1" asp-for="PhoneNumber">Admin Number</label>
                    <input class="form-control" type="tel" asp-for="PhoneNumber" required />
                </div>

                <div class="d-flex gap-3">
                    <div>
                        <label class="form-label mb-1" asp-for="Password">Admin Password</label>
                        <input class="form-control" type="password" asp-for="Password" required />
                    </div>

                    <div>
                        <label class="form-label mb-1" asp-for="ConfirmPassword">Confirm Password</label>
                        <input class="form-control" type="password" asp-for="ConfirmPassword" required />
                    </div>
                </div>
                

                <div>
                    <button class="btn btn-dark" type="submit">Sign Up</button>
                </div>

                <p class="mb-0 mt-2">
                    Already have an account?
                    <a class="text-decoration-none" asp-page="/Index">Login</a>
                </p>
            </form>
        </section>

        <section class="col-md-7 col-lg-8">
            <div class="background-2"></div>
        </section>
        <div>
        </div>
    </main>
</body>

</html>